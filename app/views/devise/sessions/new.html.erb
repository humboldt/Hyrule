<!-- Intro Header -->
<header class="intro">
  <div class="slideshow"></div>
    <div class="intro-body">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="wrapper">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <%= f.label :email, 'Votre email :', class: 'tagline' %><br />
                  <%= f.email_field :email, placeholder: 'Entrez votre email', :class => 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :email, 'Votre mot de passe :', class: 'tagline' %><br />
                  <%= f.password_field :password, autocomplete: "off", placeholder: 'Entrez votre mot de passe',
                                       :class => 'form-control' %>
                </div>
                <div class="checkbox-inline tagline">
                  <% if devise_mapping.rememberable? -%>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, 'Restez connectÃ©' %>
                  <% end %>
                </div>
                <div class="form-group">
                  <%= f.submit "Se connecter !", :class => 'btn btn-success btn-block' %>
                </div>
              <% end %>
            <hr>
            <%= link_to raw("<i class='fa fa-facebook fa-fw'></i> <span class='network-name'>Se connecter via Facebook</span>"),
                omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-block btn-social btn-facebook" %>
            <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Se connecter via Twitter</span>"),
                omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-block btn-social btn-twitter" %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
