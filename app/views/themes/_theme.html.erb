<!-- Image Section -->
<section class="content-section colle-serre text-center">
  <div class="container-theme">
    <div class="overlay" style="background: url(<%= asset_url(theme.image) %>) center center / cover no-repeat; position: absolute; display: block;"></div>
    <div class="row bottom-space">
      <div class="col-xs-12 tagline surligne">
        <h3><%= theme.name %>
          <a href="<%= theme_path(theme) %>">
            <span class="label label-default"><i class="fa fa-info"></i></span>
          </a>
        </h3>
        <p><%= theme.descr %></p>
      </div>
    </div>
  </div>
</section>
