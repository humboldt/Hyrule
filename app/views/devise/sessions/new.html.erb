<h1>Krakoukas</h1>
<h3>Custom trip in tokyo so much WOW</h3>
<p>Login below, or <%= link_to 'create an account', new_user_registration_path %></p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="field">
  <%= f.email_field :email, autofocus: true, placeholder: 'Enter your email' %>
</div>
<div class="field">
  <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter your password' %>
</div>
<% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<ul>
  <li><%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Facebook</span>"),
          omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
  </li>
  <li>
      <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Twitter</span>"),
          omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
  </li>
  <li>
    <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Instagram</span>"),
        omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
  </li>
  <li>
        <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Google</span>"),
        omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
   </li>
</ul>
