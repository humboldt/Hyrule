<!-- Image Background Page Header -->
<!-- Note: The background image is set within the business-casual.css file. -->
<header class="business-header">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-lg-4 col-lg-offset-4 text-center">
          <div class="form-low-container">
            <div class="wrapper">
              <div class="box"><div class="icon"><div class="image"><i class="fa fa-sign-in"></i></div></div></div>
              <h3>Créer un compte</h3>
              <hr>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="form-group">
                  <%= f.email_field :email, placeholder: 'Entrez votre email', :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", placeholder: 'Entrez votre mot de passe',
                                     :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off",
                                      placeholder: 'Confirmez votre mot de passe', :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.submit "Créer mon compte !", :class => 'form-control btn-success btn-block' %>
                <% end %>
              </div>
              <hr>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
</header>
