<!-- Intro Header -->
<header class="intro">
  <div class="slideshow" id="slider"></div>
  <div class="intro-body">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h3 class="brand-heading tagline">Tokyo</h3>
          <p class="intro-text tagline">Besoin d'idée pour visiter Tokyo ? Ne cherchez pas, nous organisons tout pour vous.
            Choisissez un thème ou un quartier et nous sélectionnerons les visites et les activités les mieux adaptés
            pour vous.</p>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- Header -->

<%= render @themes %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= link_to "Nouveau voyage", new_trip_path, class: 'btn btn-success btn-lg' %>
  </div>
</div>






<p id="notice"><%= notice %></p>

<h1>Themes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Descr</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @themes.each do |theme| %>
      <tr>
        <td><%= theme.name %></td>
        <td><%= theme.descr %></td>
        <td><%= theme.image %></td>
        <td><%= link_to 'Show', theme %></td>
        <td><%= link_to 'Edit', edit_theme_path(theme) %></td>
        <td><%= link_to 'Destroy', theme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Theme', new_theme_path %>
