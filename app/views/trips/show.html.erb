            <% if @trip.style.comment %>
              <p class="small"><%= @trip.style.comment %></p>
            <% end %>
            <p><%= link_to 'Edit your trip', edit_trip_path(@trip), :class => "btn btn-default btn-lg" %></p>
            <p><%= link_to "Delete this trip", trip_path(@trip), method: :delete, :class => "btn btn-default btn-lg" %></p>
        </div>
        <div class="col-sm-4">
            <h2>For <%= @trip.adults %> addults and <%= @trip.kids %> kids</h2>
            <address>
                <strong>Cost : <%= @trip.price %></strong>
                <br><%= @trip.date %>
                <br>  <%= render 'book_status', trip: @trip %>
            </address>
            <address>
                <p>contact email : <%= @trip.user.email %></p>
