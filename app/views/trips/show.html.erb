
<!-- Image Background Page Header -->
<!-- Note: The background image is set within the business-casual.css file. -->
<header class="business-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="tagline"><%= @trip.name.capitalize %></h1>
                <p> <%= @days.length %> day(s) on this trip
                <% if @trip.gestion.status == "new" %>
                  <small><%= link_to 'Add a new day', new_trip_day_path(@trip) %></small></p>
                <% end %>
                <% if @trip.gestion.status == 'new'%>
                  <%= link_to "Delete this trip", trip_path(@trip),
                              method: :delete, data: {confirm: "Delete this trip ?"} %>
                <%end%>
            </div>
        </div>
    </div>
</header>

<!-- Page Content -->
<div class="container">
    <hr>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-lg-4">
      <div class="box">
        <div class="icon">
          <div class="image"><i class="fa fa-flag"></i></div>
          <div class="info">
            <h3 class="title">Vous avez choisi un Eco Trip !</h3>
              <p><b>Petit budget, Best experience !</b> Priorité aux activités gratuites
              et aux restaurants locaux. :-)</p>
            <h3 class="title">Avec un rythme relax !</h3>
              <p><b>Un rythme relaxant !</b> Votre trip sera organisé pour que
                vous ayez le temps de vous reposer.</p>
              <p><b>Un minimum de transport</b> pour profiter de la journée un
                maximum. Vous ne shouaitez pas marcher trop.</p>
            <div class="more">
              <a href="<%= edit_trip_path(@trip) %>" title="Title Link">
                Modifier mon trip  <i class="fa fa-angle-double-right"></i>
              </a>
            </div>
          </div>
        </div>
        <div class="space"></div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6 col-lg-4">
    <div class="box">
      <div class="icon">
        <div class="image"><i class="fa fa-flag"></i></div>
        <div class="info">
          <h3 class="title">Vous voulez profitez en priorité :</h3>
          <% if @trip.style.culture %>
            <p><b>Culture et Histoire :</b>
            Découverte des musées, monuments et sites touristiques.</p>
          <%end%>
          <% if @trip.style.nature %>
            <p><b>Nature et exterieur :</b>
            Profiter de la nature et des grands espaces. Parcs et jardins...</p>
          <%end%>
          <% if @trip.style.sport %>
            <p><b>Sport :</b>
            Bouger, courir, sauter...  Faire du sport.</p>
          <%end%>
          <% if @trip.style.food %>
            <p><b>Foodies :</b>
            Manger ! Restaurant, marchés, snacks.. tout doit disparaitre !</p>
          <%end%>
          <% if @trip.style.shopping %>
            <p><b>Shopping :</b>
            Faire les magasins, pour moi et pour les autres.</p>
          <%end%>
          <% if @trip.style.kid %>
          <p> KIDs FRIDLY STICKER TODO</p>
          <%end%>
        </div>
      </div>
      <div class="space"></div>
    </div>
    </div>

    <div class="col-xs-12 col-sm-6 col-lg-4">
    <div class="box">
      <div class="icon">
        <div class="image"><i class="fa fa-flag"></i></div>
        <div class="info">
            <%= render partial: 'book_status', locals: { trip: @trip }%>
        </div>
      </div>
      <div class="space"></div>
    </div>
    </div>
    </div>


    </div>
    <!-- /.row -->
    <hr>

    <div class="row">
      <%= render @days %>
    </div>
    <!-- /.row -->
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
              <h2> <%= @days.length %> day(s) on this trip</h2>
              <% if @trip.gestion.status == "new" %>
                <p class="lead"><%= link_to 'Add a new day', new_trip_day_path(@trip) %> </p>
              <% end %>
            </div>
        </div>
        <!-- /.row -->
    </footer>
</div>
<!-- /.container -->
