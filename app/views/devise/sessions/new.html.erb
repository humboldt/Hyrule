<!-- Intro Header -->
<header class="intro bottom-space">
  <div class="slideshow"></div>
  <div class="intro-body">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h1 class="brand-heading tagline">TOMOMI</h1>
          <p>Tokyo Ã  la carte.</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-2 wrapper">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row">
              <div class="form-group col-md-8 col-md-offset-2">
                <%= f.email_field :email, placeholder: 'Enter your email', :class => 'form-control' %>
              </div>
              <div class="form-group col-md-8 col-md-offset-2">
                <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter your password', :class => 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="checkbox tagline">
                <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, 'Se souvenir de moi' %>
                <% end %>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-8 col-md-offset-2">
                <%= f.submit "Se connecter", :class => 'btn btn-success btn-block' %>
               <% end %>
              </div>
            </div>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                  <%= link_to raw("<i class='fa fa-facebook fa-fw'></i> <span class='network-name'>Se connecter via Facebook</span>"),
                  omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-block btn-social btn-facebook" %>
            </div>
            <div class="col-md-8 col-md-offset-2">
                  <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Se connecter via Twitter</span>"),
                  omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-block btn-default btn-social btn-twitter" %>
                </div>
            </div>
            <br>
            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Infos Section -->
<section  id="info-row" class="container content-section text-center">
  <%= render('shared/infos') %>
</section>

