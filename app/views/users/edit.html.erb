
<!-- Header -->
<header class="intro-header">
    <div class="container">
        <div class="intro-message">
            <h3>Edit your profile :</h3>
            <h4>
            <%= form_for @user do |f| %>
            <%= f.email_field :email %>
            <%= f.submit 'Save' %>
            <% end %>
            </h4>
            <h4>
             <%= form_for @account do |f| %>
               <%= f.label      :name %>
               <%= f.text_field :name %>
               <%= f.label      :about %>
               <%= f.text_area :about %>
               <%= f.submit 'Save :)' %>
             <% end %>
            </h4>
            <h5><%= link_to 'Profile page', user_path(@user) %></h5>
            <hr class="intro-divider">
        </div>
    </div>
</header>
