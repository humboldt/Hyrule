<div class = "container">

  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Krakoukas
              <small>Custom trip in tokyo so much WOW!</small>
          </h1>
          <p>Login below, or <%= link_to 'create an account', new_user_registration_path %></p>
      </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: 'Enter your email', :class => 'btn btn-secondary btn-lg' %>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter your password', :class => 'btn btn-secondary btn-lg' %>
      <% if devise_mapping.rememberable? -%>
       <%= f.check_box :remember_me, :class => 'btn btn-secondary btn-lg' %>
       <%= f.label :remember_me, :class => 'btn btn-secondary btn-lg' %>
     <% end %>
     <%= f.submit "Log in", :class => 'btn btn-secondary btn-lg' %>
    <% end %>
   </div>
  </div>
<hr>
  <div class="row">
    <div class="col-lg-4">
      <%= link_to raw("<i class='fa fa-facebook fa-fw'></i> <span class='network-name'>Facebook</span>"),
          omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-social btn-facebook" %>
    </div>
    <div class="col-lg-4">
      <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Twitter</span>"),
          omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-social btn-twitter" %>
    </div>
    <div class="col-lg-4">
      <%= link_to raw("<i class='fa fa-google fa-fw'></i> <span class='network-name'>Google</span>"),
        omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-social btn-google" %>
    </div>
  </div>

</div>
