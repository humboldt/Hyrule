<div class='row'>
  <h1>KRAKOUKAS !</h1>
  <h3>Sign up using :</h3>
</div>

<div class ='row'>
  <div class ='col-md-2'></div>
  <div class ='col-md-4 omniauth'>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(:facebook)}", omniauth_authorize_path(resource_name, :facebook) %>
    <%= link_to "Sign in with BouBha!", root_path %>
  </div>
  <div class ='col-md-4 omniauth'>
    <%= link_to "Sign in with Google", root_path %>
    <%= link_to "Sign in with Instagramm", root_path %>
  </div>
  <div class ='col-md-2'></div>
</div>

<div class ='row'>
    <h4>Or register the old way :</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
</div>

<div class='row'>
  <div class='col-md-4'>

  </div>
  <div class='col-md-4 block'>
    <%= f.email_field :email, autofocus: true, placeholder: 'Enter your email' %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter your password' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm your password' %>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  </div>
  <div class='col-md-4'>
  </div>
</div>
<% end %>

<div class='row'>
  <div class ='col-md-2'></div>
  <div class ='col-md-8'>
    Already have an account ? <%= link_to 'Sign in here !', new_user_session_path %>
    Wanna know more ? <%= link_to 'Return to homepage', root_path %>
  </div>
  <div class ='col-md-2'></div>

</div>
