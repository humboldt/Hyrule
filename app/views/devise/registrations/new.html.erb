<header class="intro-header">
    <div class="container">
        <div class="intro-message">
            <h1>Krakoukas</h1>
            <h3>Login and book your amazing trip</h3>
            <hr class="intro-divider">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <%= f.email_field :email, autofocus: true, placeholder: 'Enter your email', :class => 'btn btn-secondary btn-lg' %>
                <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter your password', :class => 'btn btn-secondary btn-lg' %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm your password', :class => 'btn btn-secondary btn-lg' %>
                <%= f.submit "Sign up !", :class => 'btn btn-secondary btn-lg' %>

            <% end %>

<hr class="intro-divider">
            <p>or use your favorite SNS to login :</p>
            <ul class="list-inline intro-social-buttons">
              <li class="list-inline-item">
              <!-- TO REMOVE IN FB LINK IS WORKING "#{OmniAuth::Utils.camelize(:facebook)}"  !-->
                <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Facebook</span>"),
                    omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
              </li>
              <li class="list-inline-item">
                <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Twitter</span>"),
                    omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
              </li>
              <li class="list-inline-item">
                <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Instagram</span>"),
                    omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
              </li>
              <li class="list-inline-item">
                <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Google</span>"),
                    omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
              </li>
            </ul>
        </div>
    </div>
</header>
