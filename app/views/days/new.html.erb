<h1>New Day</h1>

<%= form_for [@trip, @day] do |f| %>
  <% if @day.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@day.errors.count, "error") %> prohibited this day from being saved:</h2>

      <ul>
      <% @day.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :chronos %>
    <%= f.number_field :chronos %>
  </div>

  <div class="field">
    <%= f.label :theme %>
    <%= f.select(:theme_id) do %>
      <% Theme.all.each do |theme| %>
        <%= content_tag(:option, theme.name, value: theme.id) %>
      <% end %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', trip_path(@trip) %>
