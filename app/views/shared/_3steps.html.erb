<section class="content-section text-center">
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <div class="circle-container">
        <div class="circle background-3step-01">
          <div class="step-blabla tagline">
            <h2 class="txt-on-img">Composez</h2>
            <div class="box"><div class="icon"><div class="image"><i class="fa"><strong>1</strong></i></div></div></div>
            <h4>Votre voyage sur mesure</h4>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-4">
      <div class="circle-container">
        <div class="circle background-3step-02">
          <div class="step-blabla tagline">
            <h2 class="txt-on-img">Choisissez</h2>
            <div class="box"><div class="icon"><div class="image"><i class="fa"><strong>2</strong></i></div></div></div>
            <h4>Le thème de vos journées</h4>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-4">
      <div class="circle-container">
        <div class="circle background-3step-03">
          <div class="step-blabla tagline">
            <h2 class="txt-on-img">Réservez</h2>
            <div class="box"><div class="icon"><div class="image"><i class="fa"><strong>3</strong></i></div></div></div>
            <h4>Votre expérience unique</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row tb-padding">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
      <% if current_user %>
        <%= link_to "Préparer mon voyage", trips_path, class: "btn btn-block btn-hop" %>
        <% else %>
        <%= link_to "Se connecter", new_user_session_path, class: "btn btn-block btn-hop" %>
        <% end %>
      </div>
  </div>
</section>
