<%= form_for [trip, day] do |f| %>
  <% if day.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@day.errors.count, "error") %> prohibited this day from being saved:</h2>

      <ul>
      <% day.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :chronos %>
    <%= f.number_field :chronos %>
  </div>
  <div class="field">
    <%= f.label :theme %>
    <% Theme.all.each do |theme| %>
      <%= f.radio_button( :theme_id,  theme.id ) %>
      <%= label theme.id, theme.name %>
    <% end %>
  </div>
  <div class="field">
    <h5>Lunch</h5>
    <%= f.fields_for :lunch do |ff| %>
      <%= ff.label "Book a lunch ?" %><%= ff.check_box :todo %>
      <%= ff.radio_button :style, 1 %>
      <%= ff.label :style_gastro, "Gastrononmic experience" %>
      <%= ff.radio_button :style, 2 %>
      <%= ff.label :style_gastro, "Local experience" %>
      <%= ff.radio_button :style, 1 %>
      <%= ff.label :style_gastro, "Original experience" %>
      <%= ff.label :comment %>
      <%= ff.text_field :comment %>
    <% end %>
    </p>
  </div>
  <div class="field">
    <h5>Dinner</h5>
    <%= f.fields_for :dinner do |ff| %>
      <%= ff.label "Book a dinner ?" %><%= ff.check_box :todo %>
      <%= ff.radio_button :style, 1 %>
      <%= ff.label :style_gastro, "Gastrononmic experience" %>
      <%= ff.radio_button :style, 2 %>
      <%= ff.label :style_gastro, "Local experience" %>
      <%= ff.radio_button :style, 1 %>
      <%= ff.label :style_gastro, "Original experience" %>
      <%= ff.label :comment %>
      <%= ff.text_field :comment %>
    <% end %>
    </p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
