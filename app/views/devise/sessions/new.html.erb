<header class="intro-header">
    <div class="container">
        <div class="intro-message">
            <h1>Krakoukas</h1>
            <h3>Login and book your amazing trip</h3>
            <hr class="intro-divider">
            <p>Use your favorite SNS to login, or <%= link_to 'create an account', new_user_registration_path %> the old way</p>
            <ul class="list-inline intro-social-buttons">
              <li class="list-inline-item">
              <!-- TO REMOVE IN FB LINK IS WORKING "#{OmniAuth::Utils.camelize(:facebook)}"  !-->
                <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Facebook</span>"),
                    omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
              </li>
              <li class="list-inline-item">
                <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Twitter</span>"),
                    omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
              </li>
              <li class="list-inline-item">
                <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Instagram</span>"),
                    omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
              </li>
              <li class="list-inline-item">
                <%= link_to raw("<i class='fa fa-twitter fa-fw'></i> <span class='network-name'>Google</span>"),
                    omniauth_authorize_path(resource_name, :facebook), :class => "btn btn-secondary btn-lg" %>
              </li>
            </ul>
        </div>
    </div>
</header>

<!-- Page Content -->
<section class="content-section-a">

    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Login the old way / Temporary</h2>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.email_field :email, autofocus: true, placeholder: 'Enter your email' %>
                </div>
                <div class="field">
                  <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter your password' %>
                </div>
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                  <% end %>
                  <div class="actions">
                    <%= f.submit "Log in" %>
                  </div>
                <% end %>
              </div>

            </div>
            <div class="col-lg-5 offset-lg-2">
            </div>
        </div>

    </div>
    <!-- /.container -->
</section>
